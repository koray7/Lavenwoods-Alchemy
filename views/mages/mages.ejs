    <link rel="stylesheet" type="text/css" href="css/mages.css" />
</head>

<body>

    <% for (let i=0; i<mage.length; i++){ %>
        <% console.log(mage[i]) %>
            <div>
                <h2>
                    <%= mage[i].name %>
                </h2>
                <a href="/potions/new" target="_blank">
                    <img src="<%= mage[i].image %>" alt="Enigma-Mage">
                </a>
            </div>
            <% } %>

